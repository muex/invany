{% extends 'base.html.twig' %}

{% block title %}Customer index{% endblock %}

{% block body %}
    <h1>Customer index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Number</th>
                <th>Companyname</th>
                <th>Phone</th>
                <th>Fax</th>
                <th>Mobile</th>
                <th>Mail</th>
                <th>Web</th>
                <th>Currency</th>
                <th>Taxid</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for customer in customers %}
            <tr>
                <td>{{ customer.id }}</td>
                <td>{{ customer.number }}</td>
                <td>{{ customer.companyname }}</td>
                <td>{{ customer.phone }}</td>
                <td>{{ customer.fax }}</td>
                <td>{{ customer.mobile }}</td>
                <td>{{ customer.mail }}</td>
                <td>{{ customer.web }}</td>
                <td>{{ customer.currency }}</td>
                <td>{{ customer.taxid }}</td>
                <td>
                    <a href="{{ path('customer_show', {'id': customer.id}) }}">show</a>
                    <a href="{{ path('customer_edit', {'id': customer.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('customer_new') }}">Create new</a>
{% endblock %}
